    <Button android:id="@+id/button5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Website" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
    <Button android:id="@+id/button3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Change" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    <Button android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Register" android:layout_toRightOf="@+id/button5" android:layout_alignBaseline="@+id/button5" android:layout_alignBottom="@+id/button5"/>
    <Button android:id="@+id/button6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reset Pass" android:layout_toRightOf="@+id/button2" android:layout_alignBaseline="@+id/button2" android:layout_alignBottom="@+id/button2"/>
</RelativeLayout>
