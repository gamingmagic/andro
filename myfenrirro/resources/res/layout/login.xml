<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:id="@+id/relativeLayout1" android:background="@drawable/menu_ninepatch" android:layout_width="match_parent" android:layout_height="match_parent">
    <EditText android:id="@+id/editText1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Password" android:lines="1" android:ems="10" android:layout_below="@+id/autoCompleteTextView1" android:layout_alignLeft="@+id/autoCompleteTextView1" android:layout_alignRight="@+id/autoCompleteTextView1" android:inputType="textPassword"/>
    <CheckBox android:id="@+id/checkBox1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save" android:layout_alignLeft="@+id/checkBox2" android:layout_alignTop="@+id/autoCompleteTextView1" android:layout_alignBottom="@+id/autoCompleteTextView1"/>
    <CheckBox android:id="@+id/checkBox2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save" android:layout_toRightOf="@+id/editText1" android:layout_alignTop="@+id/editText1"/>
