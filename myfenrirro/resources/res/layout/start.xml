<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/tv_update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your game is not the latest version. Download latest APK." android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    <TextView android:id="@+id/tv_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="v999" android:layout_above="@+id/tv_update" android:layout_alignParentLeft="true"/>
    <Button android:id="@+id/tv_startgame" android:layout_width="240dp" android:layout_height="wrap_content" android:text="Start Game" android:layout_above="@+id/btn_settings" android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/btn_updatefeedback" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Feedback / Other versions" android:layout_below="@+id/btn_settings" android:layout_alignLeft="@+id/btn_settings" android:layout_alignRight="@+id/btn_settings"/>
    <Button android:id="@+id/btn_settings" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Settings" android:layout_alignLeft="@+id/tv_startgame" android:layout_alignRight="@+id/tv_startgame" android:layout_centerVertical="true"/>
</RelativeLayout>
